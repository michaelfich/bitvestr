<h2>Sign in</h2>

<%= form_tag sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="field">
    <%= button_tag "Log in!" %>
  </div>
<% end %>
